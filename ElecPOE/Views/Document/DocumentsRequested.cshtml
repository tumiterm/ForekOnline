@model IEnumerable<ElecPOE.DTO.DocumentDTO>

@{
    ViewData["Title"] = "Documents Requested";
}

<style>
    .form-control, .accordion-item {
        border-color: black;
    }

    .acchead {
        background-color: #2774F1
    }

    .select2-selection__rendered {
        line-height: 31px !important;
    }

    .select2-container .select2-selection--single {
        height: 38px !important;
        border-color: black;
    }

    .select2-selection__arrow {
        height: 34px !important;
    }

    .card-header, .head {
        background-color: darkred;
    }

    a {
        text-decoration: none;
    }

    .card-border, .table {
        border-color: black;
    }

    thead {
        background-color: darkred;
    }

    th {
        color: white;
    }

    .vs {
        margin-left: 240px;
    }

    .table-striped > tbody > tr:nth-child(odd) > td,
    .table-striped > tbody > tr:nth-child(odd) > th {
        background-color: #FCCFCF;
    }
</style>
<div class="col-xl-12">
    <div class="card mb-4">
        <div class="card-header">
            <i class="fa bi-file-pdf text-white"></i>
            <span class="text-white">Document Requests<span class="text-bold"></span></span>
        </div>

        <div class="card-body">
            <table class="table table-striped" id="datatablesSimple">
                <thead style="color:darkred">
                    <tr>
                        <th>
                            Action
                        </th>
                        <th class="text-white">Reference</th>
                        <th class="text-white">Doc Type</th>
                        <th class="text-white">Quantity</th>
                        <th class="text-white">Request Date</th>
                        <th class="text-white">Return Date</th>
                        <th class="text-white">Returned?</th>
                        <th class="text-white">Approved By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a class="text-primary" asp-action="OnRequestDocument" asp-route-DocumentId="@item.DocumentId"><i class="fa fa-folder-open"></i> Open</a>
                            </td>
                            
                            <td>@item.Reference</td>
                            <td>@item.DocumentType</td>
                            <td>@item.Quantity</td>
                            <td>@item.RequestDate.ToShortDateString()</td>
                            <td>@item.ReturnDate.Value.ToShortDateString()</td>
                            <td>@item.IsReturned</td>
                            <td>@item.ApprovedBy</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

