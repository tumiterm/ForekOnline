@{
    ViewData["Title"] = "Home Page";
}

<div class="col-lg-12 col-12 p-0">
    <div id="hero-slide" class="carousel carousel-fade slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/Purple and blue congrats grad banner (1).jpg"
                     class="carousel-image img-fluid" alt="...">

                <div class="carousel-caption d-flex flex-column justify-content-end">
                    <h1>Forek Institute</h1>

                    <p>Lifelong Learning</p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/Images/Purple and blue congrats grad banner (2).jpg"
                     class="carousel-image img-fluid" alt="...">

                <div class="carousel-caption d-flex flex-column justify-content-end">
                    <h1> Education</h1>

                    <p>Further Education and Training</p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/Images/Purple and blue congrats grad banner.jpg"
                     class="carousel-image img-fluid" alt="...">

                <div class="carousel-caption d-flex flex-column justify-content-end">
                    <h1>Dual-Education</h1>

                    <p>Artisan and Skills Training</p>
                </div>
            </div>

        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#hero-slide"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>

        <button class="carousel-control-next" type="button" data-bs-target="#hero-slide"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

