@model IEnumerable<ElecPOE.DTO.LearnerAssessmentDTO>

<style>
    .form-control, .accordion-item {
        border-color: black;
    }

    .acchead {
        background-color: #2774F1
    }

    .select2-selection__rendered {
        line-height: 31px !important;
    }

    .select2-container .select2-selection--single {
        height: 38px !important;
        border-color: black;
    }

    .select2-selection__arrow {
        height: 34px !important;
    }

    .card-header, .head {
        background-color: darkred;
    }

    a {
        text-decoration: none;
    }

    .card-border, .table {
        border-color: black;
    }

    thead {
        background-color: darkred;
    }

    th {
        color: white;
    }

    .ref {
        background-color: darkblue;
    }

    .vs {
        margin-left: 240px;
    }

    .table-striped > tbody > tr:nth-child(odd) > td,
    .table-striped > tbody > tr:nth-child(odd) > th {
        background-color: #FCCFCF;
    }
</style>


<div class="col-xl-12">
    <div class="card mb-4">
        <div class="card-header">
            <i class="fa bi-bookshelf me-1 text-white"></i>
            <span class="text-white">Student Assessments - Uploads Per Record<span class="text-bold"></span></span>
        </div>

        <div class="card-body">
            <table class="table table-striped" id="datatablesSimple">
                <thead style="color:darkred">
                    <tr>
                        <th class="text-white">Assessment Type</th>
                        <th class="text-white">Module</th>
                        <th class="text-white">(Student Details + Course + NQF)</th>
                        <th class="text-white">Uploaded By</th>
                        <th class="text-white">Uploaded On</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                        
                            <td>
                                @Html.DisplayFor(m => item.Assessment.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Assessment.Module)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Assessment.Student)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Assessment.CreatedBy)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Assessment.CreatedOn)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<br />








