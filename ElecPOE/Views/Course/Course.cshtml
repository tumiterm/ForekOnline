@model ElecPOE.DTO.CourseModuleDTO
@using ElecPOE.Enums

<style>
    .card-header, .head {
        background-color: darkred;
    }

    .form-control {
        border-color: black;
    }

    thead {
        background-color: darkred;
    }

    th {
        color: white;
    }
</style>
<div class="col-xl-12">
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-file me-1 text-white"></i>
            <span class="text-white">Course Registration & Management<span class="text-bold"></span></span>
        </div><br />

        <div class="col-xl-12 p-2">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-book me-1 text-white"></i>
                    <span class="text-white">Manage Course<span class="text-bold"></span></span>
                </div>

                <div class="card-body">
                    <form asp-action="Course">
                        <div class="alert alert-danger mb-0 mbt-0" role="alert" style="border-bottom-width:5px; border-bottom-color:darkred">
                            <div class="form-group col-md-12">
                                <label class="control-label">Course Type</label>
                                <div class="input-group mb-3 input1">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa fa-book text-primary"></i></span>
                                    <select asp-for="Type" class="form-control CType" asp-items="Html.GetEnumSelectList<eCourseType>()">
                                        <option selected="selected" value="">Select Course Type</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">

                            <div class="form-group col-md-4">
                                <label class="control-label">Course Name</label>
                                <div class="input-group mb-3 input1">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa fa-question-circle text-primary"></i></span>
                                    <input asp-for="Name" required class="form-control" />
                                </div>
                            </div>

                            <div class="form-group col-md-4 Level">
                                <label class="control-label">NQF Level</label>
                                <div class="input-group mb-3 input1">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa bi-sort-numeric-up-alt text-primary"></i></span>
                                    <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<eNQF>()">
                                        <option selected="selected" value="">Select NQF Level</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group col-md-4 NType">
                                <label class="control-label">N Type</label>
                                <div class="input-group mb-3 input1">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa fa-question-circle text-primary"></i></span>
                                    <select asp-for="NType" class="form-control" asp-items="Html.GetEnumSelectList<eNType>()">
                                        <option selected="selected" value="">Select Option</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group col-md-4">
                                <label class="control-label">Course Credit</label>
                                <div class="input-group mb-3 input1">
                                    <span class="input-group-text" id="basic-addon1"><i class="fa bi-sort-numeric-up-alt text-primary"></i></span>
                                    <input asp-for="CourseCredit" required class="form-control" />
                                </div>
                            </div>

                            <div class="form-group col-md-12 mt-2" style="background-color:whitesmoke;">
                                <button type="submit" class="btn btn-success save"><i class="fa fa-save"></i> Save</button>
                                <button type="reset" class="btn btn-outline-warning float-end"><i class="fa fa-undo"></i> Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function () {

        $(".NType").hide();

        $('.CType').on('change', function () {

            var selectedItem = $(".CType").find('option:selected').text();

            if (selectedItem == "Select Course Type") {

                $(".Level").show();
                $(".NType").hide();

            } else if (selectedItem == "Occupational") {

                $(".Level").show();
                $(".NType").hide();

            } else if (selectedItem == "Nated") {

                $(".NType").show();

                $(".Level").hide();

            } else {

            }

        });
    });

    $(document).on("select2:open", () => {
        document.querySelector(".select2-container--open .select2-search__field").focus()
    });

</script>
